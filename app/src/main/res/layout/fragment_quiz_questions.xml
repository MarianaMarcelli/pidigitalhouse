<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackQuiz"
    android:fillViewport="true"
    tools:context=".quiz.view.QuizQuestionsFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/quizTopAppBar"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorBlack35pct"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/quiz"
            app:titleTextColor="@color/colorWhite" />
    </com.google.android.material.appbar.AppBarLayout>


    <ImageButton
        android:id="@+id/btnBackQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/dim20dp"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageQuizQuestion"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim192dp"
        android:layout_marginStart="@dimen/dim8dp"
        android:layout_marginTop="@dimen/dim16dp"
        android:layout_marginEnd="@dimen/dim8dp"
        android:layout_marginBottom="@dimen/dim16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBackQuestions"
        app:srcCompat="@drawable/sistema_solar_quiz" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/dim16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="@dimen/dim16dp"
        android:fontFamily="@font/ubuntu"
        android:text="Quantos Planetas possui o Sistema Solar?"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageQuizQuestion" />

    <RadioGroup
        android:id="@+id/questionRadioGroup"
        android:layout_width="@dimen/dim0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim32dp"
        android:layout_marginTop="@dimen/dim8dp"
        android:layout_marginEnd="@dimen/dim32dp"
        android:checkedButton="@+id/radio_button_1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestion">

        <RadioButton
            android:id="@+id/radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5" />

        <RadioButton
            android:id="@+id/radio_button_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7" />

        <RadioButton
            android:id="@+id/radio_button_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8" />

        <RadioButton
            android:id="@+id/radio_button_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9" />

    </RadioGroup>


    <Button
        android:id="@+id/btnNextQuestion"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/dim8dp"
        android:layout_marginEnd="32dp"
        android:paddingHorizontal="@dimen/dim40dp"
        android:paddingVertical="@dimen/dim10dp"
        android:text="@string/pr_xima"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionRadioGroup"
        app:strokeColor="@color/colorWhite" />
</androidx.constraintlayout.widget.ConstraintLayout>