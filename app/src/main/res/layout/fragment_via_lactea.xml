<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exploration.view.ViaLacteaFragment"
    android:background="@drawable/backkground_vialactea_text"
    android:fillViewport="true">

      <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


          <ImageButton
              android:id="@+id/btnBackMilkyWay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dim20dp"
              android:layout_marginTop="20dp"
              android:background="@color/colorTransparent"
              android:src="@drawable/ic_baseline_arrow_back_24"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/txtNossoLugar"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dim24dp"
              android:layout_marginEnd="@dimen/dim24dp"
              android:fontFamily="@font/ubuntu"

              android:text="@string/nosso_lugar_no_cosmos"
              android:textAlignment="center"

              android:textAllCaps="true"
              android:textColor="@color/colorWhite"
              android:textSize="@dimen/dim26sp"
              android:textStyle="bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/btnBackMilkyWay"
              app:layout_constraintVertical_bias="0.0" />

          <TextView
              android:id="@+id/txtUmPontinho"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dim24dp"
              android:layout_marginEnd="@dimen/dim24dp"
              android:layout_marginBottom="24dp"
              android:fontFamily="@font/ubuntu"
              android:text="@string/galaxia_espiral"
              android:textAlignment="center"
              android:textColor="@color/colorWhite"
              android:textSize="@dimen/dim20sp"
              app:layout_constraintBottom_toTopOf="@+id/txtViaLactea"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/txtNossoLugar"
              app:layout_constraintVertical_bias="1.0" />

          <TextView
              android:id="@+id/txtViaLactea"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:fontFamily="@font/ubuntu"
              android:text="@string/via_l_ctea"
              android:textAlignment="center"
              android:textColor="@color/viaLactea"
              android:textSize="@dimen/dim32sp"
              app:layout_constraintBottom_toTopOf="@+id/btnConhecaSistemaSolar"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" />

          <Button
              android:id="@+id/btnConhecaSistemaSolar"
              style="?attr/materialButtonOutlinedStyle"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="24dp"
              android:layout_marginEnd="24dp"
              android:layout_marginBottom="16dp"
              android:fontFamily="@font/ubuntu"
              android:paddingVertical="@dimen/dim14dp"
              android:text="@string/conhe_a_nosso_sistema_solar"
              android:textAlignment="center"
              android:textColor="@color/colorWhite"
              android:textSize="@dimen/dim18sp"
              android:textStyle="bold"
              app:cornerRadius="@dimen/dim10dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:strokeColor="@color/colorWhite" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>