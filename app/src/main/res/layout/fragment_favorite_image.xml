<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favorite.view.FavoriteImageFragment">

    <ImageView
        android:id="@+id/ivImageFavoriteImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/llToolbarFavoriteImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/colorBlack80pct"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvTitleFavoriteImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dim10dp"
            android:layout_marginStart="@dimen/dim50dp"
            android:layout_weight="1"
            android:width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem[5]" />

        <ImageButton
            android:id="@+id/ibShareFavoriteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dim10dp"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_baseline_share_24"
            app:tint="@color/colorWhite" />


        <ImageButton
            android:id="@+id/ibCloseFavoriteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dim50dp"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_outline_close_24"
            app:tint="@color/colorWhite" />
    </LinearLayout>

</FrameLayout>