<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nasinha.digitalspace.favoritescreen.view.FavoriteScreenFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent">

        <ImageButton
            android:id="@+id/ibBackFavoriteScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivImageFavoriteScreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim300dp"
        android:layout_marginHorizontal="@dimen/dim20dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleFavoriteScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dim20dp"
            android:layout_marginVertical="@dimen/dim10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu_bold"
            android:maxLines="2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim18sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem[6]" />

        <ImageButton
            android:id="@+id/ibShareFavoriteScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="@color/colorWhite"
            android:layout_marginEnd="@dimen/dim10dp"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_baseline_share_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateFavoriteScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim20dp"
        android:layout_marginEnd="@dimen/dim20dp"
        android:textColor="@color/colorWhite"
        tools:text="@tools:sample/date/mmddyy" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTextFavoriteScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dim20dp"
            android:textColor="@color/colorWhite"
            tools:text="@tools:sample/lorem/random" />
    </ScrollView>
</LinearLayout>