<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlackQuiz"
    tools:context="com.nasinha.digitalspace.quiz.view.QuestionsFragment">

    <Button
        android:id="@+id/btnAnswer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="Resposta 4"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:cornerRadius="@dimen/dim6dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAnswer3"
        app:layout_constraintStart_toStartOf="@+id/btnAnswer3"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer3"
        app:strokeColor="@color/colorWhite" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/quizTopAppBar"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorBlack35pct"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/quiz"
            app:titleTextColor="@color/colorWhite" />
    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQuestions"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/colorTransparent"
        app:cardCornerRadius="@dimen/dim6dp"
        app:strokeColor="@color/colorWhite"
        app:cardElevation="@dimen/dim0dp"
        app:strokeWidth="@dimen/dim1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="346dp"
                android:layout_height="91dp"
                android:layout_margin="@dimen/dim10dp"
                android:gravity="center"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Aqui sua pergunta" />

            <TextView
                android:id="@+id/txtQuestioNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dim10dp"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuestion"
                tools:text="4/10" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="@dimen/dim20dp"
        android:text="@string/pr_xima"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim18sp"
        app:backgroundTint="@color/colorTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer4" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="Resposta 1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:cornerRadius="@dimen/dim6dp"
        app:layout_constraintEnd_toEndOf="@+id/cardQuestions"
        app:layout_constraintStart_toStartOf="@+id/cardQuestions"
        app:layout_constraintTop_toBottomOf="@+id/cardQuestions"
        app:strokeColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="Resposta 2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:cornerRadius="@dimen/dim6dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAnswer1"
        app:layout_constraintStart_toStartOf="@+id/btnAnswer1"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer1"
        app:strokeColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="Resposta 3"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:cornerRadius="@dimen/dim6dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAnswer2"
        app:layout_constraintStart_toStartOf="@+id/btnAnswer2"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer2"
        app:strokeColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ubuntu"
        android:text="00:30"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>