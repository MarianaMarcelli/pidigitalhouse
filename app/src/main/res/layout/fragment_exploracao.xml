<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_exploracao"
    android:fillViewport="true"
    tools:context=".exploration.view.ExploracaoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackgroundExploracao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/ibNavigationExploracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16dp"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_outline_menu_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtExploracao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/explora_o_espacial"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibNavigationExploracao" />

        <TextView
            android:id="@+id/txtInfoExploracao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/dim50dp"
            android:fontFamily="@font/ubuntu"
            android:lineSpacingExtra="2sp"
            android:text="@string/info_galaxias"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtExploracao" />

        <Button
            android:id="@+id/btnExplorar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="@dimen/dim260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dim16dp"
            android:backgroundTint="@color/colorTransparent"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="@dimen/dim10dp"
            android:text="@string/explorar"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim16sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/dim10dp"
            app:icon="@drawable/ic_astronaut_1"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dim10dp"
            app:iconTint="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInfoExploracao"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/txtExplorandoODia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:justificationMode="inter_word"
            android:text="@string/explorando_o_dia_em_imagens"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnExplorar"
            app:layout_constraintStart_toStartOf="@+id/btnExplorar"
            app:layout_constraintTop_toBottomOf="@+id/btnExplorar" />

        <Button
            android:id="@+id/btnFatoAstronomico"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="@dimen/dim260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dim16dp"
            android:backgroundTint="@color/colorTransparent"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="@dimen/dim10dp"
            android:text="@string/fato_astron_mico"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim16sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/dim10dp"
            app:icon="@drawable/ic_solar_system"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dim10dp"

            app:iconTint="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtExplorandoODia"
            app:strokeColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnTerra"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="@dimen/dim260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorTransparent"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="@dimen/dim10dp"
            android:text="@string/terra"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim16sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/dim10dp"
            app:icon="@drawable/ic_terra"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/dim10dp"
            app:iconTint="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFatoAstronomico"
            app:strokeColor="@color/colorWhite" />
        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnFavoritos"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:drawableTop="@drawable/ic_baseline_star_24"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/favoritos"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnQuiz"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:drawableTop="@drawable/ic_help_outline_24px"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/quiz"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnBibliography"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:drawableTop="@drawable/ic_article_white_24dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/bibliografia"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
