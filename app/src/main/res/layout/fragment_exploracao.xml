<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploracaoFragment">


    <ImageView
        android:id="@+id/imgBackgroundExploracao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_exploracao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSair"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/sair"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim20sp"
        app:cornerRadius="@dimen/dim10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBackgroundExploracao"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txtExploracao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/explora_o_espacial"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim30sp"
        app:layout_constraintBottom_toBottomOf="@id/imgBackgroundExploracao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSair"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtInfoExploracao"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:justificationMode="inter_word"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/info_galaxias"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtExploracao" />

    <Button
        android:id="@+id/btnExplorar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="@string/explorar"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:cornerRadius="@dimen/dim10dp"
        app:icon="@drawable/ic_telescope"
        app:iconTint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInfoExploracao"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txtExplorandoODia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/explorando_o_dia_em_imagens"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExplorar" />

    <Button
        android:id="@+id/btnFatoAstronomico"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="@string/fato_astron_mico"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:cornerRadius="@dimen/dim10dp"
        app:icon="@drawable/ic_solar_system"
        app:iconPadding="10dp"
        app:iconTint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtExplorandoODia"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTerra"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:fontFamily="@font/ubuntu"
        android:text="@string/terra"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:cornerRadius="@dimen/dim10dp"
        app:icon="@drawable/ic_terra"
        app:iconPadding="10dp"
        app:iconTint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFatoAstronomico"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="1dp" />

    <ImageButton
        android:id="@+id/btnBibliografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_manual_1"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTerra"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>