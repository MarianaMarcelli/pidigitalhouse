<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bibliography.view.BibliographyFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent">

        <ImageButton
            android:id="@+id/btnBackBibliography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:padding="@dimen/dim10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim30dp"
            android:text="@string/bibliografia"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim20sp"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bibliographyRecyclerView"
        android:layout_marginHorizontal="@dimen/dim20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>