<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.renan.digitalspace.login.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_loginFragment_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/fatoAstronomicoFragment2"
        android:name="com.renan.digitalspace.apod.view.ApodFragment"
        android:label="fragment_fato_astronomico"
        tools:layout="@layout/fragment_fato_astronomico" >
        <action
            android:id="@+id/action_fatoAstronomicoFragment2_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.renan.digitalspace.signup.view.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/bibliografiaFragment"
        android:name="com.renan.digitalspace.exploration.view.BibliografiaFragment"
        android:label="fragment_bibliografia"
        tools:layout="@layout/fragment_bibliografia" >
        <action
            android:id="@+id/action_bibliografiaFragment_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment" />
    </fragment>
    <fragment
        android:id="@+id/exploracaoFragment"
        android:name="com.renan.digitalspace.exploration.view.ExploracaoFragment"
        android:label="fragment_exploracao"
        tools:layout="@layout/fragment_exploracao">
        <action
            android:id="@+id/action_exploracaoFragment_to_viaLacteaFragment"
            app:destination="@id/viaLacteaFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_bibliografiaFragment"
            app:destination="@id/bibliografiaFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_fatoAstronomicoFragment2"
            app:destination="@id/fatoAstronomicoFragment2" />
        <action
            android:id="@+id/action_exploracaoFragment_to_epicFragment"
            app:destination="@id/epicFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_changeNameFragment"
            app:destination="@id/changeNameFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_changeEmailFragment"
            app:destination="@id/changeEmailFragment" />
        <action
            android:id="@+id/action_exploracaoFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/sistemaSolarFragment"
        android:name="com.renan.digitalspace.exploration.view.SistemaSolarFragment"
        android:label="fragment_sistema_solar"
        tools:layout="@layout/fragment_sistema_solar">
        <action
            android:id="@+id/action_sistemaSolarFragment_to_planetsMenuFragment"
            app:destination="@id/planetsMenuFragment" />
        <action
            android:id="@+id/action_sistemaSolarFragment_to_viaLacteaFragment"
            app:destination="@id/viaLacteaFragment" />
    </fragment>
    <fragment
        android:id="@+id/viaLacteaFragment"
        android:name="com.renan.digitalspace.exploration.view.ViaLacteaFragment"
        android:label="fragment_via_lactea"
        tools:layout="@layout/fragment_via_lactea">
        <action
            android:id="@+id/action_viaLacteaFragment_to_sistemaSolarFragment"
            app:destination="@id/sistemaSolarFragment" />
        <action
            android:id="@+id/action_viaLacteaFragment_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment" />
    </fragment>
    <fragment
        android:id="@+id/epicFragment"
        android:name="com.renan.digitalspace.epic.view.EpicFragment"
        android:label="fragment_epic"
        tools:layout="@layout/fragment_epic" >
        <action
            android:id="@+id/action_epicFragment_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment" />
    </fragment>
    <fragment
        android:id="@+id/planetsMenuFragment"
        android:name="com.renan.digitalspace.planetsmenu.view.PlanetsMenuFragment"
        android:label="fragment_planets_menu"
        tools:layout="@layout/fragment_planets_menu">
        <action
            android:id="@+id/action_planetsMenuFragment_to_bottomsheetFragment"
            app:destination="@id/bottomsheetFragment" />
        <action
            android:id="@+id/action_planetsMenuFragment_to_exploracaoFragment"
            app:destination="@id/exploracaoFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomsheetFragment"
        android:name="com.renan.digitalspace.planetsmenu.view.BottomsheetFragment"
        android:label="fragment_bottomsheet"
        tools:layout="@layout/fragment_bottomsheet">
        <action
            android:id="@+id/action_bottomsheetFragment_to_planetsMenuFragment"
            app:destination="@id/planetsMenuFragment" />
    </dialog>
    <dialog
        android:id="@+id/changeNameFragment"
        android:name="com.renan.digitalspace.dialogs.view.ChangeNameFragment"
        android:label="fragment_change_name"
        tools:layout="@layout/fragment_change_name" />
    <dialog
        android:id="@+id/changePasswordFragment"
        android:name="com.renan.digitalspace.dialogs.view.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <dialog
        android:id="@+id/changeEmailFragment"
        android:name="com.renan.digitalspace.dialogs.view.ChangeEmailFragment"
        android:label="fragment_change_email"
        tools:layout="@layout/fragment_change_email" />
</navigation>
